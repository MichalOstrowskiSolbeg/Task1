@model Task1_Calculator.Models.MathModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4;">Calculator</h1>
</div>
<div>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="value1" class="control-label">Value 1</label>
            <input asp-for="value1" class="form-control" placeholder="Write number" pattern="[0-9]*\,?[0-9]+" />
            <span asp-validation-for="value1" class="text-danger"></span>

            <label asp-for="value2" class="control-label">Value 2</label>
            <input asp-for="value2" class="form-control" placeholder="Write number" pattern="[0-9]*\,?[0-9]+" />
            <span asp-validation-for="value2" class="text-danger"></span>
        </div>
        <p class="errors-text">@Html.DisplayFor(result => result.exceptionMessage)</p>
        <div class="form-group">
            <input asp-action="Calculate" type="submit" value="Add" class="btn btn-primary" name="task" />

            <input asp-action="Calculate" type="submit" value="Subtract" class="btn btn-primary" name="task" />

            <input asp-action="Calculate" type="submit" value="Multiply" class="btn btn-primary" name="task" />

            <input asp-action="Calculate" type="submit" value="Divide" class="btn btn-primary" name="task" />
        </div>
        <div>
            <label for="result">Result</label>
            <input type="text" class="form-control" id="result" name="result" value="@Html.DisplayFor(a => a.result)" readonly />
        </div>
    }
</div>